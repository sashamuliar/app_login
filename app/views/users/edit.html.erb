<div class="centr_wrap">
  <h2>Edit <%= @user.name %> <span class="mini_mail">(<%= @user.email %>)</span></h2>

  <% if alert %>
    <p class="alert alert-danger fade in alert-dismissible">
    <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">Ã—</a><%= alert %></p>
  <% end %>

  <%= form_with(model: @user, local: true) do |f| %>


    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
    
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :lastname %><br />
      <%= f.text_field :lastname, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :age %><br />
      <%= f.text_field :age, class: "form-control" %>
    </div>

    <div class="field">
      <%= radio_button("user", "gender", "Male") %><%= f.label :male %><br />  
      <%= radio_button("user", "gender", "Female") %><%= f.label :female %><br />
   </div>

    <div class="actions">
      <%= f.submit "Update", class: "btn btn-primary" %>
    </div>

  <% end %>

  <h3>Cancel my account</h3>

  <%= link_to "Back", :back %>
</div>